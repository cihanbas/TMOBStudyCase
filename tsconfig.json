{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2015", "es2015.promise", "es2016.array.include", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "types": ["jest"],

    "module": "commonjs",
    "jsx": "react-native"
  },

  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "__tests__/**/*-test.ts"
  ]
}
